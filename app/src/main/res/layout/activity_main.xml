<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/background_ingame"
    tools:context=".MainActivity">
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <pl.droidsonroids.gif.GifImageView
            android:layout_marginTop="150dp"
            android:id="@+id/enemyImg"
            android:layout_width="380dp"
            android:layout_height="400dp"
            android:src="@drawable/papirus2"
            android:layout_centerInParent="true"
            />
    </FrameLayout>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time: 30"
            android:layout_gravity="center"
            android:layout_marginTop="65dp"
            android:textSize="30dp"
            android:textColor="#FFFFFF"/>
    <TextView
        android:id="@+id/tv_enemyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Papirus"

        android:layout_marginLeft="120dp"
        android:textSize="35dp"
        android:textColor="#FFFFFF"/>

    <ProgressBar
        android:id="@+id/hp"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:indeterminate="false"
        android:maxHeight="10dip"
        android:minHeight="10dip"
        android:progress="100"
        android:layout_marginTop="50dp"
        android:progressDrawable="@drawable/redprogress" />

        <Button
            android:id="@+id/btn_click"
            android:layout_width="160dp"
            android:backgroundTint="@color/white"
            android:layout_height="wrap_content"
           android:layout_marginLeft="100dp"
            android:layout_marginTop="580dp"
            android:text="Click"
            android:textColor="@color/black"

            android:textSize="25dp" />
        <Button
            android:id="@+id/btn_start"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="Start"
            android:backgroundTint="#8b0000"
            android:textSize="25dp"
            android:layout_gravity="center"
            android:layout_marginTop="300dp"
            android:layout_marginLeft="95dp"/>



</RelativeLayout>